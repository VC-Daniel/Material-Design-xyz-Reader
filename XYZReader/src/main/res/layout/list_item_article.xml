<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/item_margin_small"
    android:layout_marginLeft="@dimen/item_margin_small"
    android:layout_marginRight="@dimen/item_margin_small"
    android:layout_marginTop="@dimen/item_margin_small"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/storyImageThumbnailDescription"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/photo_background_protection"
            android:orientation="vertical">

            <TextView
                android:id="@+id/article_title"
                style="@style/list_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/item_margin_default"
                android:paddingLeft="@dimen/card_edge_keyline"
                android:paddingRight="@dimen/card_edge_keyline"
                android:paddingTop="@dimen/item_padding_large" />

            <TextView
                android:id="@+id/article_subtitle"
                style="@style/list_item_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/item_margin_default"
                android:paddingLeft="@dimen/card_edge_keyline"
                android:paddingRight="@dimen/card_edge_keyline" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
